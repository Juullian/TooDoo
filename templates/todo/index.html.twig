{% extends 'base.html.twig' %} {% block title %}Todo App!{% endblock %} {% block
body %}
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
  crossorigin="anonymous"
/>
<style>
  .wrapper {
    margin: 1em auto;
    font: 18px/1.5 sans-serif;
  }
  .wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
  .todo-input-field {
    max-width: 950px;
  }
  #todo_form_todoname {
    position: relative;
    max-width: 950px;
    margin-top: -50px;
  }
  .btn-primary {
    margin-left: 15px;
  }
  .form-control {
    margin-left: 15px;
    border: 1px solid #000;
  }
  .title-todo {
    margin-left: 15px;
  }
  .fini-shed {
    margin-left: 10px;
    margin-top: 30px;
  }
  .all-done-todo {
    margin: auto;
    width: 22%;
    border: 2px solid #5b5b5b;
    padding: 10px;
  }
</style>

<div class="wrapper">
  <h1 class="title-todo">ToDo-App</h1>
  {% if not items and not items_finished %}
  <button
    style="margin-left: 1300px; margin-top: -75px; display: inline"
    class="btn btn-outline-danger"
    disabled
  >
    Alle l√∂schen
  </button>
  {% endif %} {% if items or items_finished %}
  <form action="/delete_all" method="POST">
    <button
      style="margin-left: 1300px; margin-top: -75px; display: inline"
      class="btn btn-outline-danger"
      type="submit"
    >
      Alle l√∂schen
    </button>
  </form>
  {% endif %} {% if not items_finished %}
  <button
    style="margin-left: 1150px; display: inline; margin-top: -129px"
    class="btn btn-outline-warning"
    disabled
  >
    Fertige l√∂schen
  </button>
  {% endif %} {% if items_finished %}
  <form action="/delete_all_finished" method="POST">
    <button
      style="margin-left: 1150px; display: inline; margin-top: -129px"
      class="btn btn-outline-warning"
      type="submit"
    >
      Fertige l√∂schen
    </button>
  </form>
  {% endif %}
</div>

<div>
  {{ form_start(todo_form) }}
  {{ form_row(todo_form.todoname) }}
  {{ form_end(todo_form) }}
</div>

<div>
  {% if not items and not items_finished %}
  <h5 class="all-done-todo">Du hast derzeit keine Todos. üëç</h5>
  {% endif %} {% for item in items %}
  <ul class="todo-list-item">
    <li>
      {{ item.item }}
      <a href="{{ path('status_item', { id: item.id }) }}">
        <button class="btn-light btn">‚úîÔ∏è</button>
      </a>
      <a href="{{ path('delete_item', { id: item.id }) }}">
        <button class="btn-light btn">üóëÔ∏è</button>
      </a>
    </li>
  </ul>
  {% endfor %} {% if items_finished %}
  <h5 class="fini-shed">Erledigt:</h5>
  {% endif %} {% for item_finish in items_finished %}
  <ul class="todo-list-item">
    <li>
      {{ item_finish.item }}
      <a href="{{ path('status_finished_item', { id: item_finish.id }) }}">
        <button class="btn-light btn">‚ùå</button>
      </a>
      <a href="{{ path('delete_finished_item', { id: item_finish.id }) }}">
        <button class="btn-light btn">üóëÔ∏è</button>
      </a>
    </li>
  </ul>
  {% endfor %}
</div>

{% endblock %}
