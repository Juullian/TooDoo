%} {% block body %}
<style>
  .wrapper {
    margin: 1em auto;
    max-width: 950px;
    font: 18px/1.5 sans-serif;
  }
  .wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
  .todo-input {
    position: relative;
    max-width: 950px;
    left: 50px;
  }
